doctype html
html(ng-app='chatCS')
  head
    link(href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css', rel='stylesheet')
  body
    div(ng-controller='chatCtrl')
      tabset
        tab(ng-repeat='tab in tabs', active='tab.active', disabled='tab.disabled')
          tab-heading
            | {{tab.gid}}
            i.glyphicon.glyphicon-remove(ng-click='closeTab(tab.gid)')
          ul#messages
          li(ng-repeat='message in tab.messages') {{ message }}
          form(action='')
            input(ng-model='tab.toSendMessage', autocomplete='off')
            button(ng-click='sendMessage(tab.gid)') Send
    input#uid(type='hidden', value='#{uid}')
    script(src='http://code.jquery.com/jquery-1.11.1.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.10/angular.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='js/socket.min.js')
    script(src='//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.11.0.min.js')
    script(src='js/chat-cs.js')
